<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VerticalButtonLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">0.17</item>
    </style>

    <style name="KeypadLeftStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.0</item>
    </style>
    <style name="HorizontalButtonLayout">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.185</item>
    </style>
    <style name="KeypadButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_border</item>
    </style>
    <style name="KeypadButtonRightEdgeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">27sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_border_right_edge</item>
    </style>
    <style name="KeypadRightStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.075</item>
    </style>

</resources>
